<Window x:Class="Assignment7.UI.Wpf.Windows.SightingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment7.UI.Wpf.Windows"
        mc:Ignorable="d"
        Title="Sightings History" Height="450" Width="800">
    <Grid>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,100,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ComboBox HorizontalAlignment="Left" Margin="65,31,0,0" VerticalAlignment="Top" Width="120" Name="cmbAnimalType"/>
        <DatePicker HorizontalAlignment="Left" Margin="229,30,0,0" VerticalAlignment="Top" Name="dateFrom"/>
        <DatePicker HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" Name="dateTo"/>
        <Button Content="Print" HorizontalAlignment="Left" Margin="511,32,0,0" VerticalAlignment="Top" Name="btnPrint"/>

    </Grid>
</Window>
